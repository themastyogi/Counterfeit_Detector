# Server Configuration
PORT=5000

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# MongoDB Connection (optional - app works without it)
MONGODB_URI=mongodb://localhost:27017/counterfeit_detector

# Google Cloud Vision API (optional - falls back to mock data)
# Place your service account JSON key file in the server directory
# and update the path below
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-key.json
